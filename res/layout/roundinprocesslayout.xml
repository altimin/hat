<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:id="@+id/timer" android:gravity="center" android:textSize="50dp" android:layout_weight="1"
            android:height="0dp"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="0dp" android:layout_weight="1.8" android:baselineAligned="false"
            android:clickable="false" android:measureWithLargestChild="false">
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Back"
                android:id="@+id/revertbutton" android:layout_gravity="left|center_vertical" android:layout_weight="1"
                android:width="0dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Слово!"
                android:id="@+id/word" android:layout_gravity="center" android:layout_weight="6"
                android:textSize="30dp" android:width="0dp" android:gravity="center"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fail"
                android:id="@+id/failbutton" android:layout_gravity="center" android:layout_weight="1"
                android:width="0dp"/>
    </LinearLayout>
    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp" android:layout_weight="1.2">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" android:measureWithLargestChild="false">
            <Space
                    android:layout_width="20px"
                    android:layout_height="0dp"
                    android:id="@+id/space" android:layout_weight="2" android:minHeight="0dp"/>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp" android:layout_weight="6">
                <Space
                        android:layout_width="20px"
                        android:layout_height="20px"
                        android:id="@+id/space3" android:layout_weight="1"/>
                <Button
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="OK"
                        android:id="@+id/okbutton" android:height="0dp" android:gravity="center" android:layout_gravity="center"
                        android:textSize="30dp" android:enabled="true" android:layout_weight="2" android:width="0dp"/>
                <Space
                        android:layout_width="20px"
                        android:layout_height="20px"
                        android:id="@+id/space2" android:layout_weight="1"/>
            </LinearLayout>
            <Space
                    android:layout_width="20px"
                    android:layout_height="0dp"
                    android:id="@+id/space1" android:layout_weight="2"/>
        </LinearLayout>
    </FrameLayout>

</LinearLayout>